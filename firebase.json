{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "appAssociation": "AUTO",
    "rewrites": [
      {
        "source": "auth/**",
        "dynamicLinks": true
      },
      {
        "source": "/**",
        "dynamicLinks": true
      }
    ]
  }
}
